package polymorphsism;

import polymorphism.characters.Khajit;
import polymorphism.characters.Mage;
import polymorphism.characters.Nord;
import polymorphism.characters.GameCharacter;
import java.util.Random;

public class Battle {

	public static void main(String[] args) {

		Random rand = new Random();
		
		Nord stormcloak = new Nord ("Stormcloak", 50, 50, 50);
		Khajit nkaris = new Khajit ("Nkaris", 50, 50, 50);
		Mage altmer = new Mage ("Altmer", 50, 50 ,50);
		
		GameCharacter Players[] = {stormcloak, nkaris, altmer};
		
		int Player1 = rand.nextInt(Players.length);
		int Player2 = rand.nextInt(Players.length);
		
		System.out.println(Players[Player1]);
		System.out.println(Players[Player2]);
		
		for(int ii = 0; ii < 3; ii++) {
			System.out.println("Round " + ii);
			int attackP1 = Players[Player1].attack();
			int attackP2 = Players[Player2].attack();
			int healthp1= Players[Player1].getHealth();
			int healthp2 =  Players[Player2].getHealth();
			if (Players[Player1].attack() > 0) {
				healthp2 = healthp2 - attackP1;}
			if (Players[Player2].attack() > 0) {
				healthp1 = healthp1 - attackP2;}
			System.out.println("Player 1 health after attack: " + healthp1);
			System.out.println("Player 2 health after attack: " + healthp2);}
		

		
	}

}
